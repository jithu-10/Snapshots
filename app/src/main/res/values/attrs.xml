        <attr name="readMoreMaxLine" format="integer" />
        <attr name="readMoreText" format="string|reference" />
        <attr name="readMoreColor" format="color|reference" />
        <attr name="numberOfBoldCharFromStart" format="integer"/>
    </declare-styleable>


    <declare-styleable name="cropper__CropperView">
        <attr name="cropper__grid_color" format="color"/>
